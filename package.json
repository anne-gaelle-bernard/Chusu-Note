{
  "name": "chusu-note",
  "version": "1.0.0",
  "description": "CHUSU NOTE - Application de gestion de notes et rappels",
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "setup:db": "cd backend && node setup-db.js",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build": "npm run build",    "start:backend": "cd backend && npm start",
    "vercel-build": "npm run build",    "railway:install": "cd backend && npm install",
    "railway:build": "echo 'No build step for backend'",
    "railway:start": "cd backend && npm start"
  },
  "keywords": [
    "notes",
    "reminders",
    "mongodb",
    "express",
    "react"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "vite-plugin-pwa": "^1.2.0"
  }
}
